<Window x:Class="ECAS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ECAS"
        Width="1320"
        Height="820"
        MinWidth="1040"
        MinHeight="620"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Padding="10" BorderBrush="#2E2E2E" BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <GroupBox Header="Chat" FontWeight="SemiBold" Padding="8">
                    <ListBox x:Name="ChatListBox"
                             ItemsSource="{Binding ChatLines}"
                             BorderThickness="0"
                             HorizontalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,8" Padding="8" Background="#F4F6F8" CornerRadius="6">
                                    <StackPanel>
                                        <TextBlock FontSize="11" Foreground="#666666"
                                                   Text="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Role}" />
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Message}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="ChatInputTextBox"
                             Margin="0,0,10,0"
                             MinHeight="60"
                             MaxHeight="120"
                             Padding="8"
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             KeyDown="ChatInputTextBox_OnKeyDown" />

                    <Button Grid.Column="1"
                            Width="120"
                            Padding="10,8"
                            VerticalAlignment="Bottom"
                            Content="Senden"
                            Click="SendChatButton_OnClick" />
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="12,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1.2*" />
            </Grid.RowDefinitions>

            <GroupBox Header="Chronologische Meldungen" FontWeight="SemiBold" Padding="8">
                <DataGrid ItemsSource="{Binding LogEntries}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Zeit" Width="150"
                                            Binding="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" />
                        <DataGridTextColumn Header="Quelle" Width="140" Binding="{Binding Source}" />
                        <DataGridTextColumn Header="Action" Width="130" Binding="{Binding Action}" />
                        <DataGridTextColumn Header="Titel" Width="200" Binding="{Binding Title}" />
                        <DataGridTextColumn Header="Nachricht" Width="*" Binding="{Binding Message}" />
                        <DataGridTextColumn Header="Referenz" Width="180" Binding="{Binding Reference}" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Grid.Row="1" Margin="0,10,0,0" Header="Akute Status-Meldungen" FontWeight="SemiBold" Padding="8">
                <DataGrid ItemsSource="{Binding StatusEntries}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Zeit" Width="150"
                                            Binding="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" />
                        <DataGridTextColumn Header="Status" Width="100" Binding="{Binding Status}" />
                        <DataGridTextColumn Header="Titel" Width="220" Binding="{Binding Title}" />
                        <DataGridTextColumn Header="Details" Width="*" Binding="{Binding Details}" />
                        <DataGridTextColumn Header="Referenz" Width="180" Binding="{Binding Reference}" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
