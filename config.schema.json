{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./config.schema.json",
  "title": "R-Agent config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "GlobalSettings",
    "SyncTasks",
    "MountTasks"
  ],
  "properties": {
    "GlobalSettings": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "RclonePath"
      ],
      "properties": {
        "RclonePath": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "SyncTasks": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/syncTask"
      }
    },
    "MountTasks": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/mountTask"
      }
    }
  },
  "$defs": {
    "guid": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "sizeSuffix": {
      "type": "string",
      "pattern": "^[1-9][0-9]*(?:[kKmMgGtTpPeE])(?:i?[bB])?$"
    },
    "syncTask": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "Id",
        "Name",
        "Source",
        "Target"
      ],
      "properties": {
        "Id": {
          "$ref": "#/$defs/guid"
        },
        "Name": {
          "type": "string",
          "minLength": 1
        },
        "Source": {
          "type": "string",
          "minLength": 1
        },
        "Target": {
          "type": "string",
          "minLength": 1
        },
        "Transfers": {
          "type": "integer",
          "minimum": 1,
          "default": 8
        },
        "Checkers": {
          "type": "integer",
          "minimum": 1,
          "default": 32
        },
        "DriveChunkSize": {
          "allOf": [
            {
              "$ref": "#/$defs/sizeSuffix"
            }
          ],
          "default": "64M"
        },
        "SkipLinks": {
          "type": "boolean",
          "default": true
        },
        "ExcludeFiles": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "mountTask": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "Id",
        "Name",
        "Source",
        "MountPoint"
      ],
      "properties": {
        "Id": {
          "$ref": "#/$defs/guid"
        },
        "Name": {
          "type": "string",
          "minLength": 1
        },
        "Source": {
          "type": "string",
          "minLength": 1
        },
        "MountPoint": {
          "type": "string",
          "pattern": "^[A-Za-z]:$"
        },
        "VfsCacheMode": {
          "type": "string",
          "enum": [
            "off",
            "minimal",
            "writes",
            "full"
          ],
          "default": "full"
        },
        "Verbose": {
          "type": "boolean",
          "default": false
        },
        "Links": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
